{
  "manifest_version": 3,
  "name": "Webpage Rotator",
  "version": "1.0",
  "description": "Rotate the entire webpage using a slider",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "128": "icon.png"
  }
}